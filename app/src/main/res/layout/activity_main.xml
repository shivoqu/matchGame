            android:layout_height="match_parent">

            <!--            APPLIES TO ALL IMAGE VIEWS
                image views contain images with 2 possible states
                initial state: the back image faces the user
                when the user interacts with the card or has guessed the pair of cards correctly,
                the card's back visibility will be set to 'gone' and the visibility of the
                content of the current card will be set to visible -->
            <ImageView
                android:id="@+id/imageView1Answer"
                android:layout_width="0dp"
                android:layout_height="189dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:visibility="gone"
                app:srcCompat="@drawable/car" />

